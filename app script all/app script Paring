            </div>
        </div>
    </div>

    <div id="statusMessage" class="status-message"></div>

    <script>
        // Function to execute Google Apps Script functions
        function executeFunction(functionName) {
            const button = event.target.closest('.menu-button');
            const originalText = button.innerHTML;
            
            // Show loading state
            button.classList.add('loading');
            button.disabled = true;
            
            // Show status message
            showStatus('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£...', 'info');
            
            try {
                // Execute the function using Google Apps Script
                google.script.run
                    .withSuccessHandler(function(result) {
                        button.classList.remove('loading');
                        button.disabled = false;
                        const handled = handleFunctionResult(functionName, result);
                        if (!handled) {
                            showStatus('‡∏î‡∏≥‡πÄ‡∏ô‡∏¥‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏™‡∏£‡πá‡∏à‡∏™‡∏¥‡πâ‡∏ô!', 'success');
                        }
                    })
                    .withFailureHandler(function(error) {
                        button.classList.remove('loading');
                        button.disabled = false;
                        showStatus('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.message, 'error');
                        console.error('Error executing function:', error);
                    })
                    [functionName]();
            } catch (error) {
                button.classList.remove('loading');
                button.disabled = false;
                showStatus('‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.message, 'error');
                console.error('Error:', error);
            }
        }

        // Function to show status messages
        function showStatus(message, type) {
            const statusDiv = document.getElementById('statusMessage');
            statusDiv.textContent = message;
            statusDiv.className = \`status-message \${type} show\`;
            
            setTimeout(() => {
                statusDiv.classList.remove('show');
            }, 3000);
        }

        function handleFunctionResult(functionName, result) {
            if (functionName === 'exportOfficialStandingsToCSV' && result && result.fileUrl) {
                // ‡πÄ‡∏õ‡∏¥‡∏î‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏î‡∏≤‡∏ß‡∏ô‡πå‡πÇ‡∏´‡∏•‡∏î‡πÉ‡∏ô‡πÅ‡∏ó‡πá‡∏ö‡πÉ‡∏´‡∏°‡πà
                window.open(result.fileUrl, '_blank');
                showStatus('‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÄ‡∏õ‡∏¥‡∏î‡∏•‡∏¥‡∏á‡∏Å‡πå‡∏î‡∏≤‡∏ß‡∏ô‡πå‡πÇ‡∏´‡∏•‡∏î...', 'success');
                return true;
            }
            return false;
        }

        // Add touch event listeners for better mobile support
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.menu-button');
            
            buttons.forEach(button => {
                // Add touch feedback
                button.addEventListener('touchstart', function() {
                    this.style.transform = 'scale(0.95)';
                });
                
                button.addEventListener('touchend', function() {
                    this.style.transform = '';
                });
            });
        });

    </script>
</body>
</html>
  `;
}

/**
 * ‡πÄ‡∏õ‡∏¥‡∏î Custom Menu ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô‡∏ö‡∏ô Desktop
 */
function openCustomMenu() {
  try {
    const htmlOutput = HtmlService.createHtmlOutput(getCustomMenuHTML())
      .setWidth(1200)
      .setHeight(800)
      .setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
    
    SpreadsheetApp.getUi().showModalDialog(htmlOutput, 'üèÜ Tournament Management Menu');
  } catch (error) {
    console.error('Error opening custom menu:', error);
    SpreadsheetApp.getUi().alert('‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π: ' + error.toString());
  }
}

/**
 * ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡πÇ‡∏´‡∏°‡∏î Mobile ‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
 */
function isMobileDevice() {
  try {
    const userAgent = Session.getActiveUser().getEmail();
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏à‡∏≤‡∏Å User Agent ‡∏´‡∏£‡∏∑‡∏≠‡πÉ‡∏ä‡πâ‡∏ß‡∏¥‡∏ò‡∏µ‡∏≠‡∏∑‡πà‡∏ô
    return false; // ‡∏õ‡∏•‡πà‡∏≠‡∏¢‡πÉ‡∏´‡πâ HTML ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡πÄ‡∏≠‡∏á
  } catch (error) {
    return false;
  }
}

/**
 * ‡πÄ‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏°‡∏≤‡∏∞‡∏™‡∏°‡∏Å‡∏±‡∏ö‡∏≠‡∏∏‡∏õ‡∏Å‡∏£‡∏ì‡πå
 */
function openSmartMenu() {
  try {
    // ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏Ç‡∏ô‡∏≤‡∏î‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡πÅ‡∏•‡∏∞‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏°‡∏ô‡∏π‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏°‡∏≤‡∏∞‡∏™‡∏°
    const htmlOutput = HtmlService.createHtmlOutput(getCustomMenuHTML())
      .setWidth(1200)
      .setHeight(800)
      .setXFrameOptionsMode(HtmlService.XFrameOptionsMode.ALLOWALL);
    
    SpreadsheetApp.getUi().showModalDialog(htmlOutput, 'üèÜ Tournament Management Menu');
  } catch (error) {
    console.error('Error opening smart menu:', error);
    SpreadsheetApp.getUi().alert('‚ùå ‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏õ‡∏¥‡∏î‡πÄ‡∏°‡∏ô‡∏π: ' + error.toString());
  }
}

/**
 * ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ó‡∏î‡∏™‡∏≠‡∏ö‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠
 */
function testConnection() {
  try {
    return {
      success: true,
      message: '‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏™‡∏≥‡πÄ‡∏£‡πá‡∏à!',
      timestamp: new Date().toLocaleString('th-TH')
    };
  } catch (error) {
    return {
      success: false,
      message: '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î: ' + error.toString(),
      timestamp: new Date().toLocaleString('th-TH')
    };
  }
}

/**
 * ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞‡∏£‡∏∞‡∏ö‡∏ö
 */
function getSystemStatus() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    const sheets = ss.getSheets();
    const sheetNames = sheets.map(sheet => sheet.getName());
    
    return {
      success: true,
      spreadsheetName: ss.getName(),
      sheetCount: sheets.length,
      sheetNames: sheetNames,
      timestamp: new Date().toLocaleString('th-TH')
    };
  } catch (error) {
    return {
      success: false,
      message: '‡πÄ‡∏Å‡∏¥‡∏î‡∏Ç‡πâ‡∏≠‡∏ú‡∏¥‡∏î‡∏û‡∏•‡∏≤‡∏î‡πÉ‡∏ô‡∏Å‡∏≤‡∏£‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏™‡∏ñ‡∏≤‡∏ô‡∏∞: ' + error.toString(),
      timestamp: new Date().toLocaleString('th-TH')
    };
  }
}

/**
 * ‡∏•‡∏ö‡∏ä‡∏µ‡∏ó Menu ‡πÄ‡∏Å‡πà‡∏≤ (‡∏ñ‡πâ‡∏≤‡∏°‡∏µ)
 */
function removeOldMenuSheet() {
  try {
    const ss = SpreadsheetApp.getActiveSpreadsheet();
    const menuSheet = ss.getSheetByName('Menu');
    
    if (menuSheet) {
      ss.deleteSheet(menuSheet);
      console.log('Old Menu sheet removed successfully');
    }
  } catch (error) {
    console.error('Error removing old menu sheet:', error);
  }
}
